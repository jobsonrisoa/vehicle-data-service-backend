# Application
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/vehicle_db
DATABASE_POOL_SIZE=10

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672
RABBITMQ_QUEUE_PREFIX=vehicle

# Redis (optional)
REDIS_URL=redis://localhost:6379

# NHTSA API
NHTSA_API_BASE_URL=https://vpic.nhtsa.dot.gov/api
NHTSA_API_TIMEOUT=30000
NHTSA_API_RETRY_ATTEMPTS=3

# Ingestion
INGESTION_BATCH_SIZE=100
INGESTION_CONCURRENCY=5

# Testing
RUN_REAL_API_TESTS=0
